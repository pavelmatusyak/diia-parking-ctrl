# Application
APP_NAME=Parking Violation Reporter
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
API_BASE_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5440/parking_violations
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Authentication & Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Keys (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_MAPS_API_KEY=

# File Storage (S3/MinIO) - Optional
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=parking-violations
S3_REGION=us-east-1

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_MODEL_PATH=

# Geolocation
GEOCODING_PROVIDER=nominatim
LOCATION_TOLERANCE_METERS=10.0

# Violation Settings
VERIFICATION_TIME_MINUTES=5
MAX_PHOTO_SIZE_MB=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=

# Police API (to be configured)
POLICE_API_URL=
POLICE_API_KEY=

# Diia Integration (to be configured)
DIIA_OAUTH_CLIENT_ID=
DIIA_OAUTH_CLIENT_SECRET=
DIIA_OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback
DIIA_SIGNATURE_API_URL=
